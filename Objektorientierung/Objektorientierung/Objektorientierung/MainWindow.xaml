<Window x:Class="Objektorientierung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Objektorientierung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush/>
        </StackPanel.Background>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100">Höhe</Label>
            <TextBox x:Name="tbxHoehe" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Width="100">Breite</Label>
            <TextBox x:Name="tbxBreite" Width="100"></TextBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left">
            <Button Margin="10" Width="100" Click="Button_Click">Speichern</Button>
            <ListView x:Name="lstRechteck" Height="200" Width="200" Margin="10"></ListView>
        </StackPanel>
    </StackPanel>
</Window>
